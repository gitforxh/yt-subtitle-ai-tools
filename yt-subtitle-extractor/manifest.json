{
  "manifest_version": 3,
  "name": "Subtitle Learner",
  "version": "3.0.3",
  "description": "Learn Youtube subtitles line by line with AI explanations", 
  "permissions": [
    "scripting",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*/*",
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "YouTube Subtitle Extractor",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  }
}
